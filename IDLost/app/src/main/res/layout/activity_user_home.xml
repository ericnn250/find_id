                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Akarere"/>
                <TextView
                    android:id="@+id/locationdistrictf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:text="Nyarugenge"
                    android:layout_toRightOf="@+id/locationdis"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/locationsecf"
                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Station ya Polisi"/>
                <TextView
                    android:id="@+id/locationsectorf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:text="Nyarugenge"
                    android:layout_toRightOf="@+id/locationsecf"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/locationsphonef"
                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Telephone"/>
                <TextView
                    android:id="@+id/locationphonereal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:text="078838685"
                    android:layout_toRightOf="@+id/locationsphonef"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/progressBaruserhome"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>