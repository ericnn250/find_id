                    android:text="12/1/1997"
                    android:padding="5dp"
                    android:id="@+id/locationdobreal"
                    android:textColor="@color/blue2"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/locationtype"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Ubwoko"
                android:padding="5dp"
                android:textColor="@color/Black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/locationtype"
                android:text="Perimi"
                android:padding="5dp"
                android:id="@+id/locationtypereal"
                android:textColor="@color/blue2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/locationisuedis"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:padding="5dp"
                    android:textColor="@color/Black"/>
