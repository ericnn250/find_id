                    android:text="Gakenye"
                    android:padding="5dp"
                    android:id="@+id/locationisuedistricreal"
                    android:textColor="@color/blue2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/locationiseusec"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Umurenge"
                    android:padding="5dp"
                    android:textColor="@color/Black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/locationiseusec"
                    android:text="Kajevuba"
                    android:padding="5dp"
                    android:id="@+id/locationisuesectorreal"
                    android:textColor="@color/blue2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_border_bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aho Yatoraguwe"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/locationsecr"
                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Umurenge"/>
                <TextView
                    android:id="@+id/locationsecreals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:text="Nyarugenge"
                    android:layout_toRightOf="@+id/locationsecr"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_border_bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
