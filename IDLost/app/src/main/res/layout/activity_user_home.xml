<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHome">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbaruserhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/White"
        android:textAlignment="center"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:gravity="center_horizontal" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbaruserhome"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/reluserhome"
        android:background="@drawable/curved_background"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140779772985678"
            android:textColor="@color/Black"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:id="@+id/useridnumber"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/useridnumber"
            android:padding="5dp"
            android:textColor="@color/blue1"
            android:id="@+id/useridstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ikarita ifite iyi nimero ntibonetse tuzakumenyesha niboneka"
            />
<!--            android:text="This card was found you will be notified once we found it"-->




    </RelativeLayout>
    <TextView
        android:id="@+id/msgiffound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reluserhome"
        android:visibility="visible"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Aho iri haza hano niboneka"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reluserhome">
        <LinearLayout
            android:id="@+id/locationinfo"
            android:visibility="gone"
            android:background="@color/White"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/locationnames"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Amazina"
                    android:padding="5dp"
                    android:textColor="@color/Black"/>
                <TextView
