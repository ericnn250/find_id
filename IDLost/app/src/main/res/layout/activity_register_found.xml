<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFound">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarfound"
        android:layout_width="match_parent"
        app:titleTextColor="@color/White"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:id="@+id/reg_form_found"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbarfound"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/reg_titlefound"
                android:text="Andika Iyabonetse"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_below="@+id/reg_titlefound"
                android:id="@+id/registerform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/curved_background"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Nimero y'icyangobwa"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/idnumberfound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Nimero Yicyangobwa"

                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Hitamo Ubwoko"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnercardtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Nimero Yicyangobwa"

                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Amazina"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/namesfound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Amazina"

                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Itariki yamavuko"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/dobfound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_border"
                        android:hint="Itariki yamavuko"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="10dp" />
                    <ImageButton
                        android:id="@+id/selectdatefound"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_calendal"/>
                </RelativeLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Akarere Yatangiwemo"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/issuedistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Akarere yatangiwemo"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Umurenge yatangiwemo"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/sectorissue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Umurenge yatangiwemo"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Umurenge yatoraguwemo"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/sectorfoundin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Umurenge yatoraguwemo"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/found_register_in_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/White"
                    android:background="@drawable/red_onclick_grey"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp"
                    android:text="andika"
                    android:textStyle="bold" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/progressBarregisterfound"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>