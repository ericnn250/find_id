<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <ScrollView
        android:id="@+id/reg_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/reg_title"
                android:text="Iyandikishe"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/registerform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_title"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-61dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/curved_background"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Fomu Yo Kwiyandikisha"
                    android:textColor="@color/blue2"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Icyangobwa wataye"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/idnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Nimero Yicyangobwa Cyawe"

                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Emaili"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/emailreg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Emaili"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Telefone"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phonereg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Telefone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Sobanura uko byabuze"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/descreg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Ibisobanuro"
                    android:inputType="textMultiLine"
                    android:maxLines="15"
                    android:minLines="4"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Ijambo Banga"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/passwordreg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Ijambo Banga"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Emeza Ijambo Banga"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/passwordregconfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:hint="Emeza Ijambo Banga"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/email_register_in_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/red_onclick_grey"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp"
                    android:text="IYANDIKISHE"
                    android:textColor="@color/White"
                    android:textStyle="bold" />


            </LinearLayout>

            <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/registerform"
        android:layout_centerHorizontal="true"
        android:id="@+id/relLayout1">
        <TextView
            android:id="@+id/already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ufite Conte ?"
            android:textColor="@color/Black"/>

        <TextView android:id="@+id/link_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Injira"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:textColor="#00f"
            android:layout_toRightOf="@+id/already"/>


    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/progressBarregister"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    </RelativeLayout>